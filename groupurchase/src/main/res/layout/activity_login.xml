<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/id_register_title"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="用户登录"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/id_login_username_imgv"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_register_title"
        app:srcCompat="@drawable/loginuser" />

    <ImageView
        android:id="@+id/id_login_password_imgv"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toStartOf="@+id/id_login_username_et"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="@+id/id_login_username_imgv"
        app:layout_constraintTop_toBottomOf="@+id/id_login_username_imgv"
        app:srcCompat="@drawable/password" />

    <EditText
        android:id="@+id/id_login_username_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="请输入用户名/手机/邮箱"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/id_login_username_imgv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/id_login_username_imgv"
        app:layout_constraintTop_toTopOf="@+id/id_login_username_imgv"
        app:layout_constraintVertical_bias="0.481" />

    <EditText
        android:id="@+id/id_login_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="请输入密码"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/id_login_password_imgv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/id_login_password_imgv"
        app:layout_constraintTop_toTopOf="@+id/id_login_password_imgv"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/id_login_button"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="登录"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_login_password_et" />

    <TextView
        android:id="@+id/id_login_retrieve_password_tvbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:text="找回密码"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintStart_toStartOf="@+id/id_login_button"
        app:layout_constraintTop_toBottomOf="@+id/id_login_button" />

    <TextView
        android:id="@+id/id_login_register_tvbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="注册"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/id_login_retrieve_password_tvbt"
        app:layout_constraintEnd_toEndOf="@+id/id_login_button"
        app:layout_constraintTop_toTopOf="@+id/id_login_retrieve_password_tvbt"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>