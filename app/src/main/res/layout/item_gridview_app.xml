<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".learn.gridview.AppGridViewActivity">


    <ImageView
        android:id="@+id/item_gridView_app_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/item_gridView_app_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:gravity="center"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/item_gridView_app_imageView"
        app:layout_constraintStart_toStartOf="@+id/item_gridView_app_imageView"
        app:layout_constraintTop_toBottomOf="@+id/item_gridView_app_imageView" />
</android.support.constraint.ConstraintLayout>